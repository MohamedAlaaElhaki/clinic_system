<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action لفتح قائمة المرضى -->
    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">المرضى</field>
        <field name="res_model">clinic.patient</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                أضف أول مريض
            </p>
        </field>
    </record>

    <!-- Action لفتح قائمة الأطباء -->
    <record id="action_doctor" model="ir.actions.act_window">
        <field name="name">الأطباء</field>
        <field name="res_model">clinic.doctor</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Action لفتح قائمة المواعيد -->
    <record id="action_appointment" model="ir.actions.act_window">
        <field name="name">المواعيد</field>
        <field name="res_model">clinic.appointment</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- القائمة الرئيسية للعيادة -->
    <menuitem id="menu_clinic_main" 
              name="العيادة الطبية" 
              sequence="10"
              web_icon="clinic_system,static/description/icon.png"/>

    <!-- قائمة المرضى -->
    <menuitem id="menu_clinic_patient" 
              name="المرضى" 
              parent="menu_clinic_main"
              action="action_patient"
              sequence="20"/>

    <!-- قائمة الأطباء -->
    <menuitem id="menu_clinic_doctor" 
              name="الأطباء" 
              parent="menu_clinic_main"
              action="action_doctor"
              sequence="30"/>

    <!-- قائمة المواعيد -->
    <menuitem id="menu_clinic_appointment" 
              name="المواعيد" 
              parent="menu_clinic_main"
              action="action_appointment"
              sequence="40"/>
</odoo>
